<%= form_with(model: @location, method: :post, class: "border border-light p-5", local: true) do |form| %>
        <p class="text-center h4 mb-4">Nueva Ubicacion</p>
        <div class="form-group ">
            <label >Nombre: </label>
            <%= form.text_field :name , class:'input form-control mb-4'%>
        </div>
        <div class="form-group ">
            <label >Latitud: </label>
            <%= form.text_field :lat , class:'input form-control mb-4'%>
        </div>
        <div class="form-group">
            <label >Longitud: </label>
            <%= form.text_field :long , class:'input form-control mb-4'%>
        </div>
        <%= form.hidden_field :user_id, value: @user_id %>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Crear</button>
        </div>
    

    <% end %>